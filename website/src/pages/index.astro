---
import Meta from "../components/Meta.astro";
import Footer from "../components/Footer.astro";

const samples = [
  { href: "samples/clock/index.html", name: "clock" },
  { href: "samples/crosshair/index.html", name: "crosshair" },
  { href: "samples/font/index.html", name: "font" },
  { href: "samples/glitch/index.html", name: "glitch" },
  { href: "samples/hello/index.html", name: "hello" },
  { href: "samples/palette/index.html", name: "palette" },
  // { href: "samples/snake/index.html", name: "snake" },
  // { href: "samples/sprite/index.html", name: "sprite" },
  { href: "samples/tetris/index.html", name: "tetris" },
];
---

<html lang="en" data-bs-theme="dark">
  <head>
    <Meta />
  </head>

  <body class="container" id="top">
    <main>
      <section>
        <h1>cel8-samples</h1>
        <div class="row row-cols-1 row-cols-sm-4 g-4">
          {
            samples.map(({ href, name }) => (
              <div class="col">
                <div class="card h-100">
                  <a href={href}>
                    <img
                      src={`/cel8-samples/images/${name}.png`}
                      class="card-img-top"
                      alt={name}
                      width={128}
                      height={128}
                    />
                  </a>
                  <div class="card-footer">
                    <small class="text-body-secondary">{name}</small>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
<style>
  .card {
    width: 128px;
    height: 128px;
  }

  .card-img-top {
    object-fit: contain;
  }
</style>
